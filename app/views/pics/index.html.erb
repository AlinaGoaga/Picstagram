<div class="container">
  <div class="col-md-6 col-md-offset-3 pictures-show-container">

    <div class="box-new">
      <%= link_to 'New Pic', new_pic_path %><br>
    </div>

    <% @pics.each do |pic| %>
    <%= image_tag(pic.picture.url, class: "small-image", id: "small-image") if pic.picture.present?  %>
    <div class="box">
      <%= pic.title %><br>
      <%= link_to 'Show', pic %>
      <%= link_to 'Edit', edit_pic_path(pic) %>
      <%= link_to 'Destroy', pic, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
    <% end %>

  </div>
</div>
